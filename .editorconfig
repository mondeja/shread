root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
charset = utf-8
trim_trailing_whitespace = true

# JavaScript, JSX, CSS, SCSS...
[*.{js,jsx,css,scss,json,sh,yml,yaml}]
indent_size = 2

# Markdown settings
[*.md]
trim_trailing_whitespace = false

# Bash, Python, HTML...
[*.{html,py}]
indent_size = 4
